<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movies</title>

    <!-- Incluyendo Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Incluyendo Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesMovie.styles.css" asp-append-version="true" />

    <style>
        /* Barra de navegación estándar */
        .navbar {
            background-color: #ffffff; /* Fondo blanco */
        }

        /* Letras oscuras y iconos en la barra de navegación */
        .navbar-nav .nav-link {
            font-family: 'Poppins', sans-serif;
            color: #000000; /* Letras oscuras para contraste */
        }

            .navbar-nav .nav-link i {
                color: #000000; /* Iconos oscuros */
            }

            .navbar-nav .nav-link:hover {
                color: #0056b3; /* Color de texto al pasar el ratón */
            }

        /* Fondo de la aplicación blanco */
        body {
            background-color: #f8f9fa; /* Fondo blanco claro */
            color: #000000; /* Letras oscuras para contraste */
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Panel blanco sobre fondo claro */
        .container {
            background-color: #ffffff; /* Fondo blanco */
            color: #000000; /* Letras oscuras para contraste */
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Sombra suave */
            text-align: center; /* Centrar el texto */
        }

        /* Estilo para el pie de página */
        .footer {
            background-color: #f8f9fa; /* Fondo blanco claro */
            color: #000000; /* Letras oscuras para contraste */
            text-align: center;
            padding: 1rem;
        }

            /* Enlaces en el pie de página */
            .footer a {
                color: #000000; /* Letras oscuras para contraste */
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RpMovies</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-center">
                    <ul class="navbar-nav flex-grow-1 text-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Movies/Index">
                                <i class="fas fa-film"></i> Manage Movies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-user-secret"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer border-top">
        <div class="container">
            &copy; 2024 - RpMovies - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
